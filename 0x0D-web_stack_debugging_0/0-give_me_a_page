#!/usr/bin/env bash
# This script configures Apache to return a page containing "Hello Holberton"

# Install Apache
apt-get update
apt-get install -y apache2

# Start Apache service
service apache2 start

# Create HTML file with "Hello Holberton"
{ 
  echo "<!DOCTYPE html>"
  echo "<html>"
  echo "<head>"
  echo "<title>Hello Holberton</title>"
  echo "</head>"
  echo "<body>"
  echo "<h1>Hello Holberton</h1>"
  echo "</body>"
  echo "</html>"
} > /var/www/html/index.html
